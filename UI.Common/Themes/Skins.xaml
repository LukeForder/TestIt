    <Style
        x:Key="ParagraphHeading"
        TargetType="TextBlock">
        <Setter
            Property="FontSize"
            Value="20" />
        <Setter
            Property="FontWeight"
            Value="Bold" />
    </Style>

    <Style
        x:Key="BorderlessScrollViewer"
        TargetType="ScrollViewer">
        <Setter
            Property="BorderBrush"
            Value="Transparent" />
        <Setter
            Property="VerticalScrollBarVisibility"
            Value="Auto" />
    </Style>

    <Style
        x:Key="TextBase">
        <Style.Resources>
            <sys:Double
                x:Key="FontSizeInt">18</sys:Double>
            <Thickness
                x:Key="PaddingInt">3</Thickness>
        </Style.Resources>
        <Setter
            Property="TextBox.Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="TextBox">
                    <Grid>
                        <Border
                            BorderBrush="#999"
                            BorderThickness="1">
                            <ScrollViewer
                                Name="PART_ContentHost" />
                        </Border>
                        <Popup
                            x:Name="ErrorView"
                            AllowsTransparency="True"
                            PopupAnimation="Slide">
                            <Border
                                Background="DarkRed"
                                Padding="4"
                                CornerRadius="2">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="White"
                                    Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},
                                            Path=(Validation.Errors)[0].ErrorContent}" />
                            </Border>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition
                                    Property="Validation.HasError"
                                    Value="True" />
                                <Condition
                                    Property="IsKeyboardFocused"
                                    Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter
                                TargetName="ErrorView"
                                Property="IsOpen"
                                Value="True" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter
            Property="Control.VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Control.Padding"
            Value="{StaticResource PaddingInt}" />
        <Setter
            Property="TextBlock.Padding"
            Value="{StaticResource PaddingInt}" />
        <Setter
            Property="Control.FontSize"
            Value="{StaticResource FontSizeInt}" />
        <Setter
            Property="TextBlock.FontSize"
            Value="{StaticResource FontSizeInt}" />
        <Setter
            Property="TextBlock.VerticalAlignment"
            Value="Center" />
    </Style>


